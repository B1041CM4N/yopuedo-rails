<div class="container-fluid">
  <div class="container">
    <h2>INICIAR SESIÓN</h2>
  </div>
  <div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "Correo Electrónico" %><br />
        <%= f.email_field :email, autofocus: true, require: true %>
      </div>
      <div class="field">
        <%= f.label :password, "Contraseña" %><br />
        <%= f.password_field :password, autocomplete: "off", require: true %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "No cerrar sesión" %>
        </div>
      <% end -%>
      <div class="actions">
        <%= f.submit "Iniciar sesión" %>
      </div>
    <% end %>
  </div>
  <div class="container">
    <%= render "devise/shared/links" %>
  </div>
</div>
